---
import { Badge } from '@components/ui/badge';
import { Button } from '@components/ui/button';
import { categoryMap } from '@constants/category';
import { Routes } from '@constants/router';
import { siteConfig } from '@constants/site-config';
import {
  type Category,
  getCategoryByLink,
  getCategoryList,
  getParentCategory,
  getPostsByCategory,
  translateCategoryName,
} from '@lib/content';
import { toPostRefs } from '@lib/content/transforms';
import { getLqipStyle } from '@lib/lqip';
import { routeBuilder } from '@lib/route';
import { cn } from '@lib/utils';
import { Icon } from 'astro-icon/components';
import { getLocaleFromUrl, localizedPath, t } from '@/i18n';
import type { PostRef } from '@/types/blog';
import FlippedCard from './FlippedCard.astro';

interface CategoryWithPosts {
  link: string;
  label?: string;
  image: string;
  posts: PostRef[];
  category: Category | null;
  parentCategory: Category | null;
}

const locale = getLocaleFromUrl(Astro.url.pathname);
const { categories } = await getCategoryList(locale);

const categoryPosts: CategoryWithPosts[] = await Promise.all(
  siteConfig.featuredCategories?.map(async (category) => {
    const categoryInfo = getCategoryByLink(categories, category?.link);
    const posts = await getPostsByCategory(categoryInfo?.name ?? '', locale);
    return {
      link: category.link,
      label: category?.label,
      image: category.image,
      category: categoryInfo,
      parentCategory: getParentCategory(categoryInfo, categories),
      posts: toPostRefs(posts),
    };
  }) || [],
);
---

<div class="grid w-full grid-cols-2 gap-8 gap-y-4 md:grid-cols-1">
  {
    categoryPosts.map((category) => {
      const parentCategory = category?.parentCategory;
      const parentCategoryLink = parentCategory
        ? localizedPath(Routes.Categories + '/' + (category?.link.split('/').slice(0, -1).join('/') ?? ''), locale)
        : '';
      const categoryInfo = category?.category;
      const categoryLink = localizedPath(Routes.Categories + '/' + (category?.link ?? ''), locale);
      const childrenLen = categoryInfo?.children?.length ?? 0;
      const posts = category?.posts?.slice(0, 6 - (childrenLen ?? 0));
      const displayName = translateCategoryName(category?.label ?? categoryInfo?.name ?? '', locale);
      return (
        <FlippedCard>
          <div slot="front" class="flex-center relative h-full rounded-md px-2 py-4">
            <img
              style={getLqipStyle(category.image)}
              src={category.image}
              alt={category.label}
              loading="lazy"
              decoding="async"
              class="absolute inset-0 -z-10 h-full w-full rounded-md object-cover"
            />
            <div class="bg-shoka-card-mask absolute inset-0 -z-10 h-full w-full rounded-md opacity-25" />
            <h2 class="text-2xl text-white">{displayName}</h2>
            {parentCategory?.name ? (
              <Badge variant="shoka-tag" className="absolute right-3 top-2.5 text-xs text-white opacity-80 shadow-sm">
                {translateCategoryName(parentCategory.name, locale)}
              </Badge>
            ) : null}
          </div>
          <div slot="back" class="bg-card relative h-full flex-col rounded-md px-6 pt-16 pb-4">
            <div
              class={cn(
                'from-gradient-shoka-button-start to-gradient-shoka-button-end absolute top-4 -left-4 grid h-8 max-w-[calc(100%+2rem)] place-items-center rounded-r-md bg-linear-to-l px-4',
                "after:absolute after:top-full after:-left-4 after:h-0 after:w-0 after:border-t-0 after:border-r-16 after:border-b-16 after:border-l-16 after:border-transparent after:content-['']",
                'after:border-r-gradient-shoka-button-end',
              )}
            >
              <a class="hover:animate-vertical-shake block text-base text-white" href={categoryLink}>
                {displayName}
              </a>
            </div>
            <div class="grid max-h-24 grid-cols-2 gap-x-5 gap-y-3 overflow-auto">
              {categoryInfo?.children?.length
                ? categoryInfo.children.map((child) => (
                    <a
                      href={`${categoryLink}/${categoryMap[child?.name]}`}
                      class="text-primary hover:text-blue truncate text-left transition-colors duration-300"
                    >
                      {translateCategoryName(child.name, locale)}
                    </a>
                  ))
                : null}
              {posts.map((post) => (
                <a
                  href={localizedPath(routeBuilder(Routes.Post, post), locale)}
                  class="text-primary hover:text-blue truncate text-left transition-colors duration-300"
                >
                  {post.title}
                </a>
              ))}
            </div>
            <p class="text-muted-foreground absolute bottom-4 left-6 flex items-center text-sm">
              {parentCategory?.name ? (
                <a
                  href={parentCategoryLink}
                  class="group hover:text-blue mr-1 flex cursor-pointer items-center transition duration-300"
                >
                  <Icon name="ri:flag-fill" class="mr-0.5 text-base" />
                  <span class="mr-2">{translateCategoryName(parentCategory.name, locale)}</span>
                </a>
              ) : null}
              <Fragment>
                <Icon name="gg:loadbar-doc" class="mr-0.5 text-base" />
                {categoryInfo?.children?.length
                  ? `${t(locale, 'category.subCategoryCount', { count: categoryInfo.children.length })}, `
                  : ''}
                {t(locale, 'category.postCount', { count: category.posts?.length ?? 0 })}
              </Fragment>
            </p>
            <a href={categoryLink} aria-label="more info" class="absolute right-0 bottom-0">
              <Button
                className={cn(
                  'bg-gradient-shoka-button rounded-2xl rounded-se-none rounded-es-none transition-all hover:translate-x-1 hover:translate-y-1 hover:scale-105 md:h-7 md:px-2 md:py-1 md:text-xs',
                )}
              >
                more...
              </Button>
            </a>
          </div>
        </FlippedCard>
      );
    })
  }
</div>
